<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/title"
        android:text="Settings"
        android:gravity="center"
        android:textSize="18sp"/>
<LinearLayout 
    android:layout_below="@id/title"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dip"
    android:gravity="center" >
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:paddingRight="5dip"
            android:paddingBottom="8dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logon_shape" >
         <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dip"
                android:paddingTop="4dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:layout_weight="2.8"
                    android:text="Terminal ID：" 
                     android:textSize="16sp"/>

                <EditText
                    android:id="@+id/param_set_textView1"
                    android:background="@null"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    android:hint="PLS input the device NO." />
            </LinearLayout>
             <LinearLayout 
                android:orientation="vertical"
                android:background="#A3A3A3"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginTop="7dip"
                android:layout_marginBottom="7dip"
               />
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dip"
                android:paddingTop="4dip" >

                <TextView
                    
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:layout_weight="2.8"
                    android:text="Cashier ID：" 
                     android:textSize="16sp"/>

                <EditText
                    android:id="@+id/param_set_textView2"
                    android:background="@null"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    android:hint="PLS input cashier NO." />
            </LinearLayout>

            <LinearLayout 
                android:orientation="vertical"
                android:background="#A3A3A3"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginTop="7dip"
                android:layout_marginBottom="7dip"
               />

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dip"
                android:paddingTop="4dip">

                <TextView
                   
                     android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:layout_weight="2.8"
                    android:textSize="16sp"
                    android:text="Shop NO. ：" />

                <EditText
                     android:id="@+id/param_set_textView3"
                    android:background="@null"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    android:hint="PLS input shop NO." />
            </LinearLayout>
        </LinearLayout>


       <LinearLayout
        android:layout_width="fill_parent"
  	  	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:gravity="center" 
    	android:layout_marginTop="25dip">
        <Button 
            android:id="@+id/set_btnCancel"
            android:text="Cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dip"
            android:background="@drawable/button_selector"/>
        <Button 
            android:id="@+id/set_btnSure"
            android:text="Confirm"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_selector"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>