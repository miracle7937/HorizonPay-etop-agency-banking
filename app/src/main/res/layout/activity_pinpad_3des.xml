<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <Button-->
<!--        android:id="@+id/login"-->
<!--        style="@style/alert_dialog_dark"-->
<!--        android:layout_width="match_parent"-->
<!--        android:text="login" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/loadclearmasterkey"
            style="@style/alert_dialog_dark"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:text="Load clear master key" />

        <Button
            android:id="@+id/loadmasterkey"
            style="@style/alert_dialog_dark"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Load master key" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calcMac"
            style="@style/alert_dialog_dark"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:text="Calc Mac" />

        <Button
            android:id="@+id/loadworkkey"
            style="@style/alert_dialog_dark"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Load work key" />

    </LinearLayout>

    <Button
        android:id="@+id/inputPin"
        style="@style/alert_dialog_dark"
        android:layout_width="match_parent"
        android:text="Input Online PIN" />
    <Button
        android:id="@+id/inputoffPin"
        style="@style/alert_dialog_dark"
        android:layout_width="match_parent"
        android:text="Input Offline PIN" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="18sp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>